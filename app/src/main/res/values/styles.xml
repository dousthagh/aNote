<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/annab</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="header.very_large_header">
        <item name="android:textSize">@dimen/h1</item>
    </style>

    <style name="header.medium">
        <item name="android:textSize">@dimen/h2</item>
    </style>

    <style name="medium_size_input">
        <item name="android:fontFamily">@font/ubuntu_l</item>
        <item name="android:textSize">@dimen/sp15</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="medium_input_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp15</item>
    </style>

    <style name="button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:backgroundTint">@color/teal_700</item>
        <item name="android:textColor">@color/light</item>
        <item name="android:padding">@dimen/dp7</item>
        <item name="android:fontFamily">@font/ub</item>
    </style>

    <style name="link">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/dp7</item>
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="style_edit_note">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:ems">10</item>
        <item name="android:padding">@dimen/dp7</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:gravity">top|start</item>
    </style>

    <style name="header_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/h2</item>
        <item name="android:textColor">@color/light</item>
    </style>

    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="style_category_selector">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">38dp</item>
    </style>

    <style name="note_title" parent="style_edit_note">
        <item name="android:singleLine">true</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginBottom">@dimen/dp7</item>
        <item name="android:height">30dp</item>
        <item name="android:gravity">start|center</item>
        <item name="android:background">@color/light_gray</item>
    </style>

    <style name="note_text" parent="style_edit_note">
        <item name="android:inputType">textMultiLine</item>
    </style>

    <style name="style_category_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/iran_sans_bold</item>
        <item name="android:padding">@dimen/list_item_title_padding</item>
    </style>

</resources>