<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/list_item_margin"
    app:cardCornerRadius="@dimen/list_item_corner_radius"
    tools:ignore="MissingConstraints">

    <LinearLayout
        android:padding="@dimen/dp5"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/lbl_note_item_title"
            tools:text="title"
            style="@style/header_label_style" />

        <TextView
            android:id="@+id/lbl_note_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="@dimen/font_size_list_item_body"
            android:gravity="start"
            android:textColor="@color/black"
            tools:text="text of this note text of this note text of this note text of this  note text of this note text of this  note text of this note text of this note text of this note text of this note" />

        <TextView
            android:id="@+id/tv_category_title"
            tools:text="category title"
            android:layout_gravity="end"
            style="@style/footer_label_style" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

